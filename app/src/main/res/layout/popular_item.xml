<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="5dp"
    android:layout_margin="15dp"
    android:layout_marginEnd="0dp"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="@drawable/cat_background2">



        <ImageView
            android:id="@+id/SerPic"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/cat_background3"
            android:padding="16dp"
            app:srcCompat="@drawable/broom" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/serTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:text="name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"/>

            <TextView
                    android:id="@+id/SerPrice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"

                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text=" $20/h"
                    android:textColor="@color/Primarycolor"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/serTitle" android:textSize="16sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
